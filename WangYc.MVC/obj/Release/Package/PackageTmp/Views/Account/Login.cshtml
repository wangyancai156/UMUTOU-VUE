@{
    Layout = null;
}
@model WangYc.Services.Messaging.AccountRequest
<!DOCTYPE html>
<html lang="en" class="no-js">
<head>

    <meta charset="utf-8">
    <title>UMUTOU</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- CSS --> 
    <link rel="stylesheet" href="~/Content/css/Login/reset.css">
    <link rel="stylesheet" href="~/Content/css/Login/supersized.css">
    <link rel="stylesheet" href="~/Content/css/Login/style.css">
</head>

<body>

    <div class="page-container">
        <h1>UMUTOU</h1>
        <form action="" method="post">
            <input type="text" name="LoginName" class="username"  placeholder= "@Model.LoginNamePH" value="@Model.LoginName">
            <input type="password" name="PassWord" class="password" placeholder="@Model.PassWordPH" value="@Model.PassWord">
            <div>
                <input type="text"  class="username" style="width:155px; margin-left:0px" name="Vcode" id="vcode"  placeholder="@Model.VcodePH" />
                <img src="~/handler/getvcode.ashx?vname=@(WangYc.Core.Infrastructure.Configuration.ApplicationSettingsFactory.GetApplicationSettings().VerificationCode)" class="getvcode" style="height: 40px; vertical-align: middle;padding-bottom: 4px;"
                     vname="@(WangYc.Core.Infrastructure.Configuration.ApplicationSettingsFactory.GetApplicationSettings().VerificationCode)" title="点击切换" alt="验证码" id="verifyCode" />
            </div>
            <button type="submit" onclick="loginSub()">Sign me in</button>
            <div class="error"><span>+</span></div>
        </form>
        <div class="connect">
            <p>Or connect with:</p>
            <p>
                <a class="facebook" href=""></a>
                <a class="twitter" href=""></a>
            </p>
        </div>
    </div>
    <!-- Javascript -->
    <script src="~/Scripts/Login/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Login/supersized.3.2.7.min.js"></script>
    <script src="~/Scripts/Login/supersized-init.js"></script>
    <script src="~/Scripts/Login/scripts.js"></script>

</body>

</html>

