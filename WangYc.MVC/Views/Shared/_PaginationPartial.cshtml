@*分页模板*@
<template id="pageComponent">
    <ul class="pagination">
        <li v-if="currentpage==1" v-bind:class="currentpage==1?'prev disabled':'prev'"><a href="javascript:;"><i class="icon-double-angle-left"></i></a></li>
        <li v-else v-on:click="goto(1)" v-bind:class="currentpage==1?'prev disabled':'prev'"> <a href="javascript:;"><i class="icon-double-angle-left"></i></a></li>
        <li v-for="n in totalpage" v-if="showHtml(n)" v-html="showHtml(n)" v-bind:class="currentpage == n ? 'active' : ''" v-on:click="goto(n)"><a href="javascripit:;">{{ n }}</a></li>
        <li v-if="currentpage==totalpage" v-bind:class="currentpage==totalpage?'next disabled':'next'"><a href="javascript:;"><i class="icon-double-angle-right"></i></a></li>
        <li v-else v-bind:class="currentpage==totalpage?'next disabled':'next'" v-on:click="goto(totalpage)"><a href="javascript:;"><i class="icon-double-angle-right"></i></a></li>
        <li>&nbsp;&nbsp;共{{totalpage}}页，跳转至</li>
        <li><input type="text" style="width: 32px; height: 32px; text-align:center;" id="jumpPage" v-on:keydown="enterJump" /></li>
        <li>
            <button v-on:click="jump" type="button" class="btn btn-sm btn-info" style="height:32px; margin-left:-4px;margin-top:-4px;">
                GO
            </button>
        </li>
    </ul>
</template>